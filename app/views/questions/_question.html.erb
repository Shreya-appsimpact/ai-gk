<div class="card shadow rounded-0">
  <div class="card-body">
    <% if action_name == "show" %>
      <% @category.questions.each_with_index do |question, index| %>
        <h4 class="font-weight-bold font-16 text-primary">
          <%= index + 1 %>. 
          <%= question.title %>
        </h4>
        <p class="lead font-14">
          <%= question.answer %>          
        </p>
        <hr>
      <% end %>
    <% else %>  
      <% @questions.each_with_index do |question, index| %>
        <h4 class="font-weight-bold font-16 text-primary">
          <%= index + 1 %>. 
          <%= question.title %>
        </h4>
        <p class="lead font-14">
          <%= question.answer %>          
        </p>
        <hr>
      <% end %>
    <% end %>  
  </div>
</div>
