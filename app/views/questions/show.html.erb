<div class="container">
  <%= render 'partials/flash'%>
  <div class="card mt-5">
    <div class="card-body">
      <p>
        <strong>Question:</strong>
        <%= @question.title %>
      </p>

      <p>
        <strong>Answer:</strong>
        <%= @question.answer %>
      </p>

      <%= link_to 'Edit', edit_question_path(@question), class: "btn btn-primary" %> |
      <%= link_to 'Back', questions_path, class: "btn btn-secondary" %>   
    </div>
  </div>
</div>
